input EmployeeInputs {
    loginID: String
    password: String
    fname: String!
    lname: String!
    age: Int!
    dateOfJoining: Date
    title: String
    department: String
    employeeType: String
    token: String
}

input EmployeeUpdateInputs {
    id: Int!
    title: String!
    department: String!
    currentStatus: Int!
}
input UserData {
    loginID : String
    password : String
}
input FilterEmployeeInputs {
    title: String
    department: String
    employeeType: String
}

scalar Date

type Employee {
    _id: ID
    loginID:String
    password:String
    fname: String
    lname: String
    age: Int
    dateOfJoining: Date
    title: String
    department: String
    employeeType: String
    currentStatus: Int
    token: String
}

type User{
    loginID: String
    password: String
    token: String
}

type Query {
    listAllEmployees(filters: FilterEmployeeInputs): [Employee!]!
    listSingleEmployee(id: Int!): Employee!
    loginUser(userData : UserData!) : User
}

type Mutation {
    createEmployee(employee: EmployeeInputs!): Employee!
    updateEmployee(employee: EmployeeUpdateInputs): Boolean
    deleteEmployee(id: Int!): Boolean
}